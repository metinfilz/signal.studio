<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTemplate x:Key="toolbar/removeslot" TargetType="Button">
        <Border Width="22" Height="22" Background="{TemplateBinding Background}" CornerRadius="2">
            <Canvas Width="16" Height="16" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Path Data="M3 7H13V9H3z" Fill="{TemplateBinding Foreground}" />
            </Canvas>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource HoverBackground}" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{DynamicResource PressedBackground}" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    
</ResourceDictionary>